generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  ocrCaches OCRCache[]
}

model OCRCache {
  id        Int      @id @default(autoincrement())
  imageHash String
  ocrText   String
  userEdits String?
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@index([imageHash])
}

